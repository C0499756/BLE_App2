<?xml version="1.0" encoding="UTF-8" ?>
<!--AppShell.xaml defines the visual structure of the app's user interface (navigation and layout)-->
<Shell
    x:Class="BLE_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BLE_App"
    Shell.FlyoutBehavior="Disabled"
    Title="BLE_App">

    <Shell.Resources>
        <Style TargetType="Shell">
            <Setter Property="Shell.BackgroundColor" Value="Green"/>
            <!-- Set title bar color -->
            <Setter Property="Shell.TitleColor" Value="Green"/>
            <!-- Optional: Change title text color. This is not working as of now!!!! -->
        </Style>
    </Shell.Resources>

    <TabBar>
        <ShellContent Title="Devices" 
                      ContentTemplate="{DataTemplate local:MainPage}" 
                      Route="MainPage" />
        <ShellContent Title="Cloud" 
                      ContentTemplate="{DataTemplate local:Cloud}" 
                      Route="Cloud" />
    </TabBar>

</Shell>

