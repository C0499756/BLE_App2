<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BLE_App.MQTTServer"
             Title="MQTTServer">
    
    <ScrollView>
        <VerticalStackLayout
            Padding="10">

            <HorizontalStackLayout
            Spacing="5"
            Padding="5">
                <Label
            Text=" MQTT"
            TextColor="Black"
            FontSize="Medium"
            FontAttributes="Bold"
            
            BackgroundColor="White"
            WidthRequest="200"/>

                <Button
            x:Name="send"
            Text="Send"
            TextColor="Black"
            Clicked="send_clicked"
            BackgroundColor="White"
            WidthRequest="105"/>

            </HorizontalStackLayout>

            <Label
            x:Name="lblConnected"
            TextColor="White"/>
            <Label
            x:Name="lblMessage"
            TextColor="White"   />
            <!--<Label
         x:Name="lblReceived"/>-->

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>